<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.eclipse.emf.ecp.application3x.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.emf.ecp.application3x.Perspective"
            icon="icons/alt_window_16.gif"
            id="org.eclipse.emf.ecp.application3x.perspective"
            name="ECP">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.emf.ecp.application.e3.application"
            description="%productBlurb"
            name="%productName">
         <property
               name="appName"
               value="%productName">
         </property>
         <property
               name="windowImages"
               value="platform:/plugin/org.eclipse.emf.ecp.ui.e3/icons/bricks.png">
         </property>
         <property
               name="aboutImage"
               value="icons/eclipse_lg.gif">
         </property>
         <property
               name="aboutText"
               value="%productBlurb">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="org.eclipse.emf.ecp.application3x.NavigatorRoot"
            id="org.eclipse.emf.ecp.NavigatorRoot">
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <command
               commandId="org.eclipse.ui.help.aboutAction"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.emf.ecp.edit.controls">
      <control
            class="org.eclipse.emf.ecp.edit.internal.swt.controls.TableControl"
            id="org.eclipse.emf.ecp.application.e3.control"
            showLabel="true">
         <staticTest
               priority="3"
               singleValue="false"
               supportedClassType="org.eclipse.emf.ecore.EObject"
               supportedEObject="org.eclipse.emf.emfstore.bowling.League"
               supportedFeature="players">
         </staticTest>
      </control>
   </extension>


</plugin>
