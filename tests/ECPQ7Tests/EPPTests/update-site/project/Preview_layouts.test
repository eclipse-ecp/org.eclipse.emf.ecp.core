get-view "Project Explorer" | get-tree | select "com.eclipsesource.makeithappen.model.viewmodel/viewmodels/User.view" 
    | select "com.eclipsesource.makeithappen.model.viewmodel/viewmodels/User.view" | double-click


with [get-editor "User.view" | get-tree] {
    select View | get-menu HorizontalLayout | click
    select View | get-menu VerticalLayout | click
    select "View/HorizontalLayout" | select "View/HorizontalLayout" | get-menu "Generate Controls" | click
}
with [get-window -class SelectAttributesDialog] {
 get-tree | select User
    get-button "Next >" | click
    with [get-table] {
        get-item "gender : Gender" | check
        get-item "active : EBoolean" | check
    }
    get-button Finish | click
}
get-editor "User.view" | get-tree | select "View/VerticalLayout" | select "View/VerticalLayout" 
    | get-menu "Generate Controls" | click
with [get-window -class SelectAttributesDialog] {
get-tree | select User
    get-button "Next >" | click
    with [get-table] {
        get-item "weight : EDouble" | check
        get-item "heigth : EInt" | check
    }
    get-button Finish | click
}
get-view "EMF Forms Preview" | get-button "Automatically refresh Preview View" | click
with [get-editor "User.view" | get-tree] {
    select "View/VerticalLayout"
    get-item "View/VerticalLayout" | drag-start 13 7
    get-item "View/VerticalLayout" | drag-enter 17 1 -detail move
    get-item "View/VerticalLayout" | drag-over 17 1 -detail copy
    get-item "View/HorizontalLayout" | drag-over 18 13 -detail move
    get-item "View/VerticalLayout" | drag-exit
    get-item "View/HorizontalLayout" | drag-accept 18 13 -detail move
    drag-set-data
    get-item "View/HorizontalLayout" | drop 18 13 -detail move
    drag-end -detail move
}
with [get-view "EMF Forms Preview" | get-control Any -after [get-label "View Editor Preview"] -index 8] {
    get-property "getChildren().Control[0].getChildren().Control[0].getChildren().length" | equals 3 | verify-true
    get-property "getChildren().Control[0].getChildren().Control[0].getChildren().Control[0].getText()" | equals Gender 
        | verify-true
    get-property "getChildren().Control[0].getChildren().Control[0].getChildren().Control[0].getLocation().y" | equals 5
        | verify-true
    get-property "getChildren().Control[0].getChildren().Control[1].getChildren().length" | equals 3 | verify-true
    get-property "getChildren().Control[0].getChildren().Control[1].getChildren().Control[0].getText()" | equals Active 
        | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().length" 
        | equals 6 | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().Control[0].getText()" 
        | equals Weight | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().Control[0].getLocation().x" 
        | equals 0 | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().Control[0].getLocation().y" 
        | equals 5 | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().Control[3].getText()" 
        | equals Heigth | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().Control[3].getLocation().x" 
        | equals 0 | verify-true
    get-property "getChildren().Control[0].getChildren().Control[2].getChildren().Control[0].getChildren().Control[3].getLocation().y" 
        | equals 41 | verify-true
}
