Content-Type: text/ecl
Entry-Name: .content

get-view "Project Explorer" | get-tree | select "org.eclipse.emf.ecp.makeithappen.model/model/task.ecore" 
    | select "org.eclipse.emf.ecp.makeithappen.model/model/task.ecore" | get-menu "EMF Forms/Create View Model" | click
with [get-window -class ViewModelWizardDialog] {
    get-tree | select "Task"
    get-button "Next >" | click
    get-tree | select "org.eclipse.emf.ecp.makeithappen.model.viewmodel/viewmodels"
}
get-window -class ViewModelWizardDialog | get-editbox -after [get-label "View Model"] | get-property text 
    | equals "\'Task.view\' already exists." | verify-true
with [get-window -class ViewModelWizardDialog] {
    get-editbox -after [get-label "File name:"] | set-text "Task2.view"
    get-button "Next >" | click
}
with [get-window -class ViewModelWizardDialog | get-button "Add Extension"] {
    get-property caption | equals "Add Extension" | verify-true
    get-property selected | equals true | verify-true
}

get-window -class ViewModelWizardDialog | get-button Finish | click

with [get-tab-folder -index 3] {
    get-property "pages[0]" | equals "Task2.view" | verify-true
    get-property tabCount | equals 1 | verify-true
}

get-view "Project Explorer" | get-tree | select "org.eclipse.emf.ecp.makeithappen.model.viewmodel/plugin.xml" 
    | select "org.eclipse.emf.ecp.makeithappen.model.viewmodel/plugin.xml" | double-click
with [get-editor "org.eclipse.emf.ecp.makeithappen.model.viewmodel"] {
    with [get-tab-folder] {
        get-tab-item Dependencies | click
        get-tab-item Runtime | click
        get-tab-item Extensions | click
        get-tab-item "MANIFEST.MF" | click
        get-tab-item Build | click
        get-tab-item "Extension Points" | click
    }
    get-tab-folder | get-tab-item "plugin.xml" | click
}
get-editor "org.eclipse.emf.ecp.makeithappen.model.viewmodel" | get-text-viewer | get-property text 
    | equals "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n"
    + "<?eclipse version=\"3.4\"?>\n"
    + "<plugin>\n"
    + "   <extension\n"
    + "         point=\"org.eclipse.emf.ecp.view.model.provider.xmi.file\">\n"
    + "<file filePath=\"viewmodels/Task2.view\"/>\n\n"
    + "<file filePath=\"viewmodels/UserGroup.view\"/>\n\n"
    + "<file filePath=\"viewmodels/User.view\"/>\n\n"
    + "<file filePath=\"viewmodels/Task.view\"/>\n\n"
    + "   </extension>\n\n"
    + "</plugin>" | verify-true
get-view "Project Explorer" | get-tree | select "org.eclipse.emf.ecp.makeithappen.model.viewmodel/build.properties" 
    | select "org.eclipse.emf.ecp.makeithappen.model.viewmodel/build.properties" | double-click
with [get-editor "org.eclipse.emf.ecp.makeithappen.model.viewmodel"] {
    get-tab-folder | get-tab-item "build.properties" | click
}


