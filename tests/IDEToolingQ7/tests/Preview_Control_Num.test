Entry-Name: .content

get-view "Project Explorer" | get-tree | select "com.eclipsesource.makeithappen.model.viewmodel/viewmodels/User.view" 
    | select "com.eclipsesource.makeithappen.model.viewmodel/viewmodels/User.view" | double-click
get-editor "User.view" | get-tree | select View | get-menu Control | click
get-view "EMF Forms Preview" | get-button "Automatically refresh Preview View" | click
with [get-editor "User.view"] {
    with [get-tree] {
        select "View/Control" | select "View/Control" | get-menu "Feature Path Domain Model Reference" | click
        select "View/Control/Feature Path Domain Model Reference"
    }
    get-button "Link Domain Model EFeature" | click
}
with [get-window "Select a EStructuralFeature"] {
    get-tree | select "weight : EDouble"
    get-button OK | click
}
with [get-view "EMF Forms Preview" | get-control Any -after [get-label "View Editor Preview"] -index 6] {
    get-property backgroundColor | equals "#FFFFFF" | verify-true
    get-property foregroundColor | equals "#000000" | verify-true
    get-property "getChildren().length" | equals 3 | verify-true
    get-property "getChildren().Control[0].getText()" | equals Weight | verify-true
    get-property "getChildren().Control[0].getToolTipText()" | equals "The Weight feature of type EDouble" | verify-true
    get-property "getChildren().Control[0].getStyle()" | equals "[NO_FOCUS, LEFT_TO_RIGHT, LEAD]" | verify-true
    get-property "getChildren().Control[1].getClassName()" | equals "org.eclipse.swt.widgets.Label" | verify-true
    get-property "getChildren().Control[1].getText()" | equals "" | verify-true
    get-property "getChildren().Control[1].getStyle()" | equals "[NO_FOCUS, LEFT_TO_RIGHT, LEAD]" | verify-true
    get-property "getChildren().Control[2].getClassName()" | equals "org.eclipse.swt.widgets.Text" | verify-true
    get-property "getChildren().Control[2].getMessage()" | equals "The format is \'#.#\'." | verify-true
    get-property "getChildren().Control[2].getStyle()" | equals "[SINGLE, BORDER, LEFT_TO_RIGHT, RIGHT]" | verify-true
}
