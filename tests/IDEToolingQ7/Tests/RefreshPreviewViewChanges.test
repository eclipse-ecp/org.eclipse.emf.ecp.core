Entry-Name: .content

get-menu "Window/Show View/Other..." | click
with [get-window "Show View"] {
    get-tree | select "EMF Forms/EMF Forms Preview"
    get-button OK | click
}
get-view "Package Explorer" | get-tree | select "com.eclipsesource.makeithappen.model.viewmodel/viewmodels/User.view" 
    | double-click

if -condition [get-view "EMF Forms Preview" | get-button Refresh | get-property enablement -raw |equals false]
-then{
get-view "EMF Forms Preview" | get-button "Automatic Update" | click
}
with [get-editor "User.view"] {
    with [get-tree] {
        select View | double-click
            }
   }
with [get-view "EMF Forms Preview"] {
    get-button Refresh | get-property enablement | equals true | verify-true
    get-button "Automatic Update" | get-property selected | equals false | verify-true
}
get-view "EMF Forms Preview" | get-button Refresh | click
with [get-view "EMF Forms Preview"] {
    get-label "First Name" | get-property caption | equals "First Name" | verify-true
    with [get-label "Last Name*"] {
        get-property "getLocation().x" | equals 0 | verify-true
        get-property "getLocation().y" | equals 32 | verify-true
    }
    with [get-label "First Name"] {
        get-property "getLocation().x" | equals 0 | verify-true
        get-property "getLocation().y" | equals 3 | verify-true
    }
}
with [get-editor "User.view" | get-tree] {
    select "View/Control lastName"
    get-item "View/Control lastName" | drag-start 14 11
    get-item "View/Control lastName" | drag-enter 23 0 -detail move
    drag-set-data
    get-item "View/Control lastName" | drag-over 23 0
    get-item "View/Control firstName" | drag-over 34 0 -detail move
}
with [get-editor "User.view" | get-tree] {
    select "View/Control lastName"
    get-item "View/Control lastName" | drag-start 56 11
    get-item "View/Control firstName" | drag-enter 54 17 -detail move
    get-item "View/Control firstName" | drag-over 51 5 -detail move
    get-item "View/Control firstName" | drag-exit
    get-item "View/Control firstName" | drag-accept 51 5 -detail move
    drag-set-data
    get-item "View/Control firstName" | drop 51 5 -detail move
    drag-end -detail move
}
get-view "EMF Forms Preview" | get-button Refresh | click
with [get-view "EMF Forms Preview"] {
    with [get-label "Last Name*"] {
        get-property "getLocation().x" | equals 0 | verify-true
        get-property "getLocation().y" | equals 3 | verify-true
    }
    with [get-label "First Name"] {
        get-property "getLocation().x" | equals 0 | verify-true
        get-property "getLocation().y" | equals 32 | verify-true
    }
}
get-button "Save All (M1+M2+S)" | click
